# Generated by Chef
user                  <%= node['nginx']['user'] %>;
worker_processes      auto;
worker_rlimit_nofile  100000;
pid                   <%= node['nginx']['pid_path'] %>;

events {
  worker_connections    4096;
  multi_accept on;
  use epoll;
}


http {
  include         <%= node['nginx']['prefix'] %>/conf/mime.types;
  default_type    application/octet-stream;
  charset UTF-8;

  log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                                      '$status $body_bytes_sent "$http_referer" '
                                      '"$http_user_agent" "$http_x_forwarded_for"'
				      '$request_time $upstream_response_time $pipe';

  access_log          <%= node['nginx']['prefix'] %>/logs/access.log    main;
  error_log           <%= node['nginx']['prefix'] %>/logs/error.log;

  sendfile            on;
  tcp_nopush          on;
  tcp_nodelay         on;
  port_in_redirect    off;
  server_tokens       off;

  gzip                on;
  gzip_comp_level     5;
  gzip_min_length     1024;
  gzip_proxied expired no-cache no-store private auth;
  gzip_types       text/plain application/xml text/css text/js text/xml application/x-javascript text/javascript application/json application/javascript;
  gzip_disable "MSIE [1-6]\.";

  keepalive_timeout    20;

  client_body_timeout 10;
  client_header_timeout 20;
  reset_timedout_connection on;

  send_timeout 10;

  server_names_hash_bucket_size 512;
  server_names_hash_max_size 1024;

  limit_conn_zone $binary_remote_addr zone=myzone:10m;

  open_file_cache max=100000 inactive=20s;
  open_file_cache_valid 30s;
  open_file_cache_min_uses 2;
  open_file_cache_errors on;

  include <%= node['nginx']['prefix'] %>/conf.d/*.conf;
  include <%= node['nginx']['prefix'] %>/conf/vhosts.d/*.conf;

    server {
        limit_conn     myzone   <%= node['nginx']['limit_conn'] %> ;
        listen         <%= node['nginx']['port'] %> default;
        server_name    _;
        access_log     <%= node['nginx']['prefix'] %>/logs/access.log    main;
        error_log      <%= node['nginx']['prefix'] %>/logs/error.log;
        location / {
          root     <%= node['nginx']['doc_root'] %>;
          index    index.html index.php;
        }

        error_page    404      /404.html;
           location  /404.html {
           root     <%= node['nginx']['error_pages'] %>;
        }

        error_page     500    /500.html;
           location  /500.html {
            root     <%= node['nginx']['error_pages'] %>;
        }

        location /nginx_status {
          stub_status on;
          access_log     off;
          allow 127.0.0.1;
          deny all;
        }

        location /status {
          if ($http_x_forwarded_for) {
            return 403;
          }
          access_log     off;
          allow 127.0.0.1;
          deny all;

          include fastcgi_params;
          fastcgi_pass unix:/var/lib/phpfpm.sock;
          fastcgi_param SCRIPT_FILENAME $fastcgi_script_name;
        }

        location ~ \.php$ {
          root             <%= node['nginx']['doc_root'] %>;
          fastcgi_pass     unix:/var/lib/phpfpm.sock;
          fastcgi_index    index.php;
          fastcgi_param    SCRIPT_FILENAME  <%= node['nginx']['doc_root'] %>/$fastcgi_script_name;
          include          fastcgi_params;
        }
    }
}
